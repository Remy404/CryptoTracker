---
import Layout from '../layouts/Layout.astro';
import BtcPrice from '../components/BtcPrice.jsx';
import AddTransaction from '../components/AddTransaction.jsx';
import TransactionList from '../components/TransactionList.jsx';
---

<Layout title="Chocolabs - Crypto Tracker">
	<main class="dashboard-container">
		<header class="header">
			<h1 class="text-gradient">CryptoTracker</h1>
			<p class="subtitle">Real-time tracking for your investment portfolio</p>
		</header>
		
		<div class="dashboard-grid">
			<div class="price-wrapper glass-card">
				<BtcPrice client:load />
			</div>

			<div class="form-wrapper glass-card">
				<AddTransaction client:load />
			</div>

			<div class="history-wrapper glass-card">
				<TransactionList client:load />
			</div>
		</div>
	</main>
</Layout>

<style>
	.dashboard-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 4rem 1.5rem;
	}

	.header {
		text-align: center;
		margin-bottom: 4rem;
	}

	h1 {
		font-size: 3.5rem;
		font-weight: 800;
		margin: 0;
		letter-spacing: -1px;
	}

	.subtitle {
		color: var(--text-muted);
		font-size: 1.1rem;
		margin-top: 0.5rem;
	}

	/* Configuración de la cuadrícula (Grid) */
	.dashboard-grid {
		display: grid;
		grid-template-columns: 1fr 1.5fr; /* Dos columnas de distinto ancho */
		gap: 2rem;
	}

	/* El historial ocupa las dos columnas en la fila de abajo */
	.history-wrapper {
		grid-column: span 2;
	}

	/* Ajuste para móviles: todo en una sola columna */
	@media (max-width: 900px) {
		.dashboard-grid {
			grid-template-columns: 1fr;
		}
		.history-wrapper {
			grid-column: span 1;
		}
		h1 { font-size: 2.5rem; }
	}
</style>